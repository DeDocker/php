#!/usr/bin/env bash

apt-get update -yqq
apt-get install -y --no-install-recommends $@

apt-get clean -y
apt-get autoclean -y
apt-get autoremove -y
rm -rf /usr/share/locale/*
rm -rf /var/cache/debconf/*-old
rm -rf /var/lib/apt/lists/*
rm -rf /usr/share/doc/*
rm -rf /tmp/* /var/tmp/*

